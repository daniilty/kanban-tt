{
	"version": 2,
	"name": "api-proxy",
	"port": 8080,
	"timeout": "30s",
	"cache_ttl": 0,
	"extra_config": {
		"github.com/devopsfaith/krakend/http": {
			"return_error_details": "backend_alias"
		},
		"github_com/devopsfaith/krakend-cors": {
			"allow_credentials": true,
			"allow_headers": [
				"Origin",
				"Authorization",
				"Content-Type",
				"Access-Control-Allow-Origin",
				"locale",
				"accept",
				"x-requested-with",
				"Cache-Control"
			],
			"allow_methods": [
				"POST",
				"GET",
				"DELETE",
				"PUT",
				"OPTIONS"
			],
			"allow_origins": [],
			"expose_headers": [
				"Content-Length",
				"Content-Type",
				"Cache-Control",
				"Authorization"
			],
			"max_age": "12h"
		},
		"github_com/devopsfaith/krakend-gologging": {
			"format": "logstash",
			"level": "INFO",
			"prefix": "[KRAKEND]",
			"stdout": true,
			"syslog": false
		},
		"github_com/devopsfaith/krakend-logstash": {
			"enabled": true
		}
	},
	"endpoints": [
		{
			"endpoint": "/api/v1/auth/me",
			"method": "GET",
			"output_encoding": "no-op",
			"querystring_params": [
				"*"
			],
			"headers_to_pass": [
				"*"
			],
			"backend": [{
				"url_pattern": "/api/v1/auth/me",
				"host": [
					"http://auth-api:3000"
				],
				"encoding": "no-op",
				"disable_host_sanitize": true
			}],
			"extra_config": {
				"github.com/devopsfaith/krakend-jose/validator": {
					"alg": "RS256",
					"kid": "kanban_kid",
					"jwk-url": "http://auth-api:3000/api/v1/auth/jwks",
					"disable_jwk_security": true
				}
			}
		},
		{
			"endpoint": "/api/v1/auth/confirm_email/{key}",
			"method": "GET",
			"output_encoding": "no-op",
			"querystring_params": [
				"*"
			],
			"headers_to_pass": [
				"*"
			],
			"backend": [{
